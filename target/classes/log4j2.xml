<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">/Users/radhay.anand/radhay-workspace/eirs-audit</Property>
    </Properties>
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile name="fileLogger"
                     fileName="${basePath}/eirs-audit.log"
                     filePattern="${basePath}/eirs-audit-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- Console Logger -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>

        <!-- File Logger -->
        <Logger name="org.gl.eir" level="info" additivity="false">
            <appender-ref ref="fileLogger" />
        </Logger>
    </Loggers>
</Configuration>
